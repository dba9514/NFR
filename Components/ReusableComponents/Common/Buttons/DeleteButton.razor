<MudTooltip ShowOnFocus="false" Text="@ToolTipText" Disabled="@ToolTipDisabled">
    <MudIconButton
        Variant="@Variant"
        Color="@Color"
        Size="@Size"
        Icon="@Icons.Material.Filled.Delete"
        Style="@Style"
        OnClick="@OnClick"
        Disabled="@Disabled"
    ></MudIconButton>
</MudTooltip>

@code {

    [Parameter] public string ToolTipText { get; set; } = "Delete";
    [Parameter]public bool ToolTipDisabled { get; set; } = false;
    [Parameter] [Category("Appearance")] public Size Size { get; set; } = Size.Medium;
    [Parameter] public Color Color { get; set; } = Color.Error;
    [Parameter] public bool Disabled { get; set; } = false;
    [Parameter]public string Style { get; set; } = string.Empty;
    [Parameter] public EventCallback<MouseEventArgs> OnClick { get; set; }
    [Parameter] public Variant Variant { get; set; }

}